{
  "manifest_version": 2,
  "name": "Vocab-U-List",
  "version": "0.1",
  "description": "Vocabulary list builder",
  "browser_action": {
      "default_icon": "images/icon_19x19.png",
      "default_title": "Vocab-U-List"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "chrome_url_overrides": {
    "newtab": "new_tab.html"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "activeTab",
    "tabs"
  ]
}
